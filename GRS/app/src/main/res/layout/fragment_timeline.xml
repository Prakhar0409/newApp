<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#ffcfad"
    tools:context="com.prakhar_squared_mayank.grs.TimelineFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#920398">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ffcfad">
            <ImageView
                android:id="@+id/image_ft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/timeline_circle2"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/text_ft"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/image_ft"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:text="Work started, Oh bless me Lord."
                android:textSize="17dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/timeline_linear_layout_ft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#920398">
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/fab_ft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/plus" />

</FrameLayout>
