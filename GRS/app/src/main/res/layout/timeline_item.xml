<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ecff96">
    <ImageView
        android:id="@+id/image_ti"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/timeline_circle2"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:layout_above="@id/image_ti"
        android:background="#ff7b00"
        android:layout_marginLeft="47.5dp"/>
    <TextView
        android:id="@+id/text_ti"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/image_ti"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:text="Some work done. Thank God fr ur life."
        android:textSize="17dp"/>
</RelativeLayout>