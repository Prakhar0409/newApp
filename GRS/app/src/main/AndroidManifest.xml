<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prakhar_squared_mayank.grs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity"
            android:label="Login to GRS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up" />
        <activity
            android:name=".ComplaintsActivity"
            android:label="Complaints"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".ValidationRequestActivity"
            android:label="Validation Requests" />
        <activity android:name=".ComplaintDetailActivity"
            android:label="Complaint" />
        <activity android:name=".StatusDetailActivity"
            android:label="Complaint Status" />
        <activity android:name=".SubmitComplaintActivity"
            android:label="Submit New Complaint" />
        <activity android:name=".ProfileActivity"
            android:label="My Profile" />
        <activity android:name=".BookmarksActivity"
            android:label="Bookmarks" />
        <activity android:name=".NotificationsActivity"
            android:label="My Notifications"></activity>
    </application>

</manifest>
